@model StreamShift.Domain.Entities.Transfer
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Transfer</h4>
<hr />

<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Transfer</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SourceConnectionString)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SourceConnectionString)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DestinationConnectionString)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DestinationConnectionString)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SourceDatabase)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SourceDatabase)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DestinationDatabase)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DestinationDatabase)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsFinished)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsFinished)
            </dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
